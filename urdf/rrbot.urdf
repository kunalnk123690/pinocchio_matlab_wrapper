<?xml version="1.0"?>

<!-- Revolute-Revolute Manipulator -->
<robot name="rrbot" xmlns:xacro="http://www.ros.org/wiki/xacro">


  <!-- Used for fixing robot to Gazebo 'base_link' -->
  <link name="world"/>


  <!-- Link 1 -->
  <link name="link1">
    <visual>
      <origin xyz="0.5 0 0" rpy="0 1.57 0"/>
      <geometry>
	      <box size="0.1 0.1 1"/>
      </geometry>
      <material name="black">
        <color rgba="0.0 0.0 0.0 1.0"/>
      </material>
    </visual>  
    <collision>
      <origin xyz="0.5 0 0" rpy="0 1.57 0"/>
      <geometry>
	      <box size="0.1 0.1 1"/>
      </geometry>
    </collision>  
    <inertial>
      <origin xyz="0.5 0 0.05" rpy="0 1.57 0"/>
      <mass value="1"/>
      <inertia
	      ixx="0.001666667" ixy="0.0" ixz="0.0" iyy="0.084166667" iyz="0.0" izz="0.084166667"/>
    </inertial>
  </link>
  <joint name="joint1" type="revolute">
    <parent link="world"/>
    <child link="link1"/>
    <origin xyz="0 0 0.05" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <dynamics damping="0.0"/>
    <limit lower="-3.1416" upper="3.1416" effort="10" velocity="3"/>
  </joint>

  <!-- Link 2 -->
  <link name="link2">
    <visual>
      <origin xyz="0.5 0 0.1" rpy="0 1.57 0"/>
      <geometry>
	      <box size="0.1 0.1 1"/>
      </geometry>
      <material name="black">
        <color rgba="0.0 0.0 0.0 1.0"/>
      </material>
    </visual>  
    <collision>
      <origin xyz="0.5 0 0.05" rpy="0 1.57 0"/>
      <geometry>
	      <box size="0.1 0.1 1"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0.5 0 0.1" rpy="0 1.57 0"/>
      <mass value="1"/>
      <inertia
	      ixx="0.001666667" ixy="0.0" ixz="0.0" iyy="0.084166667" iyz="0.0" izz="0.084166667"/>
    </inertial>
  </link>
  <joint name="joint2" type="revolute">
    <parent link="link1"/>
    <child link="link2"/>
    <origin xyz="1 0 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <dynamics damping="0.0"/>
    <limit lower="-3.1416" upper="3.1416" effort="10" velocity="3"/>
  </joint>

  <!-- End Effector -->
  <link name="ee_link">
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <box size="0.01 0.01 0.01"/>
      </geometry>
    </collision>
  </link>
  <joint name="ee_fixed_joint" type="fixed">
    <parent link="link2"/>
    <child link="ee_link"/>
    <origin rpy="0.0 0.0 0.0" xyz="1.0 0 0.1"/>
  </joint>


</robot>
